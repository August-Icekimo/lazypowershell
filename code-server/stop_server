#!/bin/sh

# --- 變數宣告區 ---
# 這是你之前啟動的容器名稱
CONTAINER_NAME="my_dev_container"

# --- 停止容器 ---
# 檢查容器是否存在
if [ -n "$(docker ps -a -q -f name=${CONTAINER_NAME})" ]; then
    echo "找到容器 ${CONTAINER_NAME}，正在停止並移除..."
    # docker stop 會在容器未執行時快速失敗，docker rm 也是如此。
    # 使用 || true 來忽略錯誤，確保腳本在容器已停止或不存在時也能繼續執行。
    docker stop "${CONTAINER_NAME}" || true
    docker rm "${CONTAINER_NAME}" || true
    echo "容器 ${CONTAINER_NAME} 已成功停止並移除。"
else
    echo "容器 ${CONTAINER_NAME} 不存在，無需操作。"
fi